class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {
        int n = nums.size();
        long long count = 0;
        int last= -1;
        for(int i = 0; i < n; ++i){
            if(nums[i] == 0) count += 1LL * (i - last);
            else last = i;
        }
        return count;
    }
};
