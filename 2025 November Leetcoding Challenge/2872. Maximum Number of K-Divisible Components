class Solution {
public:

    int dfs(int node, int par, vector<vector<int>> &adj, vector<int> &values, int k, int &ans){

        int sum = values[node];
        for(int adjNode: adj[node]){
            if(adjNode == par) continue;
            sum = (sum % k + dfs(adjNode, node, adj, values, k, ans)) % k;
        }
        sum %= k;
        if(sum == 0) ans++;
        return sum;
    }

    int maxKDivisibleComponents(int n, vector<vector<int>>& edges, vector<int>& values, int k) {
        vector<vector<int>> adj(n);
        for(auto it: edges){
            int u = it[0], v = it[1];
            adj[u].push_back(v);
            adj[v].push_back(u);
        }

        int ans = 0;
        dfs(0, -1, adj, values, k, ans);
        return ans;
    }
};
